{
  "easycom": {
    "^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [ 
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "enablePullDownRefresh": false
        // "navigationStyle": "custom" // 自定义导航
      }
    },
    {
      "path": "pages/survey-addition/survey-addition",
      "style": {
        "navigationBarTitleText": "填写调查表",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/survey/survey",
      "style": {
        "navigationBarTitleText": "调查表列表",
        "enablePullDownRefresh": false // 是否开启下拉刷新
      }
    },
    {
      "path": "pages/project/project",
      "style": {
        "navigationBarTitleText": "项目列表",
        "enablePullDownRefresh": false
      }
    }, {
      "path": "pages/survey-detail/survey-detail",
      "style": {
        "navigationBarTitleText": "调查表详情",
        "enablePullDownRefresh": false
      }

    }
  ],
  "condition": { // 模式配置，仅开发期间生效
    "current": 0, // 当前激活的模式（list 的索引项）
    "list": [{
      "name": "index", // 模式名称
      "path": "pages/index/index" // 启动页面，必选
    }, {
      "name": "login",
      "path": "pages/login/login"
    }, {
      "name": "survey-addition",
      "path": "pages/survey-addition/survey-addition"
    }]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#fff",
    "backgroundColor": "#fff"
  }
}
